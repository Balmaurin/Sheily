# NeuroFusion - Variables de Entorno
# ==================================

# Configuración de la Base de Datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neurofusion
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
POSTGRES_PASSWORD=your_postgres_password_here

# Configuración de JWT
JWT_SECRET=your_jwt_secret_key_here
AUTH_SECRET_KEY=your_auth_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configuración de Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here

# Configuración de la Aplicación
SECRET_KEY=your_secret_key_here
NODE_ENV=development
PORT=8000

# Configuración de Frontend
REACT_APP_ADMIN_PASSWORD=your_admin_password_here
REACT_APP_VAULT_PASSWORD=your_vault_password_here

# Configuración de IA
HF_TOKEN=your_huggingface_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Configuración de Blockchain
SOLANA_PRIVATE_KEY=your_solana_private_key_here
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Configuración de Memoria
MAX_TOKENS=4096
SUMMARY_THRESHOLD=2048

# Configuración de Logs
LOG_LEVEL=INFO
LOG_FILE=neurofusion.log

# Configuración de Seguridad
DEFAULT_PASSWORD=your_default_password_here
ENCRYPTION_KEY=your_encryption_key_here

# Configuración de Desarrollo
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
