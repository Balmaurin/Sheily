# Configuración del Backend Sheily AI - Solo Llama-3.2-3B-Instruct-Q8_0

# Configuración del servidor
PORT=8000
NODE_ENV=development
HOST=127.0.0.1

# Configuración de seguridad
JWT_SECRET=sheily-ai-jwt-secret-2025-ultra-secure-random-string-128-bits
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# Configuración del modelo Llama-3.2-3B-Instruct-Q8_0
MODEL_SERVER_URL=http://localhost:8005
MODEL_PATH=./models/llama/model
MODEL_SERVER_PORT=8005

# Configuración de base de datos PostgreSQL
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sheily_ai_db
DB_USER=sheily_ai_user
DB_PASSWORD=SheilyAI2025SecurePassword

# Configuración de monitoreo
BACKUP_DIR=./backups/chat
MAX_BACKUPS=10
BACKUP_INTERVAL=43200000

# Configuración de logs
LOG_LEVEL=info
LOG_DIR=./logs

# Configuración de cache
CACHE_ENABLED=true
CACHE_SIZE=1000
CACHE_TTL=300000

# Configuración del cliente LLM
LLM_MODE=openai
LLM_BASE_URL=http://localhost:8005
LLM_MODEL_NAME=Llama-3.2-3B-Instruct-Q8_0
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
